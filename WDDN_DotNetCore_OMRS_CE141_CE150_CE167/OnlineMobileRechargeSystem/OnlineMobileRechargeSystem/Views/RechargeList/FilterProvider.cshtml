
@{
    ViewData["Title"] = "SelectProvider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filter Provider</h1>
<hr class="border-dark"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="FilterType" method="post">
            <div class="form-group">
                <label class="control-label">Provider</label>
                <select id="provider" class="form-control btn btn-dark" name="Provider" asp-items="ViewBag.provider"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />|
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


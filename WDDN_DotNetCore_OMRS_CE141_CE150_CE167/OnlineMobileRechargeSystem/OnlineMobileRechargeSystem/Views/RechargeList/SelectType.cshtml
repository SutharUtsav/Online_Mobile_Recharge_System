
@{
    ViewData["Title"] = "SelectType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SelectType</h1>
<hr class="border-dark"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get">
            <div class="form-group">
                <label class="control-label">Provider</label>
                <p class="form-control"><b>@ViewBag.Provider</b></p>
            </div>
            <div class="form-group">
                <label class="control-label">Type</label>
                <select class="btn btn-dark form-control" name="type" asp-items="ViewBag.type"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="SelectProvider">Back to Select Provider</a>
            </div>
        </form>
    </div>
</div>

@model OnlineMobileRechargeSystem.Models.RechargeList

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>RechargeList</h4>
<hr class="border-dark" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Provider</label>
                <p class="form-control">@ViewBag.Provider</p>
            </div>
            <div class="form-group">    
                <label class="control-label">Type</label>
                <p class="form-control">@ViewBag.Type</p>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="validity" class="control-label"></label>
                <input asp-for="validity" class="form-control" />
                <span asp-validation-for="validity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datapack" class="control-label"></label>
                <input asp-for="Datapack" class="form-control" />
                <span asp-validation-for="Datapack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SMSLimit" class="control-label"></label>
                <input asp-for="SMSLimit" class="form-control" />
                <span asp-validation-for="SMSLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voice" class="control-label"></label>
                <input asp-for="Voice" class="form-control" />
                <span asp-validation-for="Voice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

